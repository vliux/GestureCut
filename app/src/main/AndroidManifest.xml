<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.vliux.android.gesturecut"
    android:versionCode="4"
    android:versionName="1.2">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- vibrate when a task activity is started -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk android:maxSdkVersion="19"
        android:minSdkVersion="14"
        android:targetSdkVersion="19"/>

    <application
        android:name=".GestureCutApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">

        <service android:name=".service.GestureService"
            android:label="GuestKeyGuardService" />

        <receiver android:name=".receiver.PackageRemovedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

        <activity android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.AddGestureActivity"
            android:label="@string/add_gesture"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui.WelcomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/Welcome.Theme.Transparent"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui.SettingsActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait">
        </activity>

        <!-- widget -->
        <receiver android:name=".widget.LockScreenWidget" >
            <intent-filter >
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info_small" />
        </receiver>
    </application>

</manifest>
