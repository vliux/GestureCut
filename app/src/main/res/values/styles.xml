<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/GcActionBar</item>
        <item name="android:actionBarTabStyle">@style/GcActionBarTabStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/GcActionBarOverflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:actionBarTabTextStyle">@style/GcActionBarTabText</item>
    </style>

    <style name="GcActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/gesture_cur_blue</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:backgroundStacked">@color/actionbar_tab_bg</item>
    </style>

    <style name="GcActionBarOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
    </style>

    <style name="GcActionBarTabText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/global_bkground</item>
    </style>

    <style name="GcActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_yellow</item>
    </style>

    <style name="activated" parent="AppTheme">
        <item name="android:background">@drawable/gesture_list_selector_activated</item>
    </style>

    <style name="text_basic_style">
        <item name="android:textColor">@color/gesture_cur_blue</item>
    </style>

    <style name="gesture_overlay">
        <item name="android:gestureStrokeWidth">24.0</item>
    </style>

    <style name="gesture_overlay_use" parent="gesture_overlay">
        <item name="android:gestureColor">#FFEE3366</item>
    </style>

    <style name="gesture_overlay_add" parent="gesture_overlay">
        <item name="android:gestureColor">#FF3344FF</item>
    </style>

    <style name="Welcome.Theme.Transparent" parent="android:Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
