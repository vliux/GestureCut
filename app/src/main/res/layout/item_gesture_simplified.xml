<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gesture_list_item_height"
    android:layout_height="@dimen/gesture_list_item_height"
    android:paddingTop="@dimen/gesture_list_item_padding_vertical"
    android:paddingBottom="@dimen/gesture_list_item_padding_vertical">

    <ImageView
        android:id="@+id/item_simple_app_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="center"/>
    
    <ImageView
        android:id="@+id/item_simple_ges_icon"
        android:layout_width="@dimen/gesture_simple_list_small_icon_dimen"
        android:layout_height="@dimen/gesture_simple_list_small_icon_dimen"
        android:layout_gravity="top|right"
        android:scaleType="center"/>
</FrameLayout>