<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <!-- tab "Use gesture -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tablike_tv_use"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/float_window_2nd_tab_use"
            android:textColor="@color/main_theme"
            android:textSize="@dimen/text_size_general"
            android:textStyle="bold"/>
        <View
            android:id="@+id/tablike_underscore_use"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/main_theme"/>
        <!-- grey bottom line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gesture_cur_grey"/>
    </LinearLayout>

    <!-- Tab "Add gesture" -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tablike_tv_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/float_window_2nd_tab_add"
            android:textSize="@dimen/text_size_general"
            android:textColor="@color/gesture_cur_grey"/>
        <View
            android:id="@+id/tablike_underscore_add"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/main_theme"
            android:visibility="invisible"/>
        <!-- grey bottom line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gesture_cur_grey"/>
    </LinearLayout>



</LinearLayout>