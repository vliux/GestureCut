<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.vliux.android.gesturecut.ui.view.GestureListView
        android:id="@+id/actv_gesture_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/gesture_list_bkground"
        android:divider="@color/gesture_cur_blue_light_semi_transparent"
        android:dividerHeight="@dimen/listview_divider_thin">
    </org.vliux.android.gesturecut.ui.view.GestureListView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        fab:fab_colorNormal="@color/gesture_cur_blue"
        fab:fab_colorPressed="@color/gesture_cur_blue_light" />
</FrameLayout>